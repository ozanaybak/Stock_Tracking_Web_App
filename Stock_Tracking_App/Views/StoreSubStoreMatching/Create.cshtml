@model stockProject.Models.DEPO_ESLESTIRME

@{
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
    ViewBag.SekmeAdi = "Store/Substore Management";
    ViewBag.SayfaAdi = "Store/Substore Definition";
    ViewBag.CardAdi = "Store/Substore Information";
}

<h2>@ViewBag.SayfaAdi</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card ">
        <h5 class="card-header h5 primary-color">@ViewBag.CardAdi</h5>
        <div class="card-body">
            <div class="form-horizontal">
                <div class="col-lg-6">

                    <div class="form-group">
                        @Html.LabelFor(model => model.DEPO_ID, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("DEPO_ID", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.DEPO_ID, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.ALT_DEPO_ID, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("ALT_DEPO_ID", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.ALT_DEPO_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-info btn-rounded" })
                        <input type="submit" value="Kaydet" class="btn btn-success btn-rounded" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}



