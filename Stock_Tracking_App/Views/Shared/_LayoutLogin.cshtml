<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.SekmeAdi</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="shortcut icon" href="~/Image/logo.png" type="image/x-icon">

    @Styles.Render("~/bundles/mainStyle")

    @Styles.Render("~/bundles/datatableCss")

    <!-- Your custom styles (optional) -->
    <style>

        .md-form.md-outline label {
            left: 8px;
            padding-right: 5px;
            padding-left: 5px;
            font-weight: 500;
            background: #fff;
            transform: translateY(-13px) scale(.8)
        }

        html,
        body,
        header,
        .view {
            height: 100%;
        }

        @@media (min-width: 560px) and (max-width: 740px) {
            html,
            body,
            header,
            .view {
                height: 650px;
            }
        }

        @@media (min-width: 800px) and (max-width: 850px) {
            html,
            body,
            header,
            .view {
                height: 650px;
            }
        }
    </style>
</head>

<body class="login-page">

    <!-- Main Navigation -->
    <header>
        <div class="mask rgba-stylish-slight h-100 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-5">

                        <!-- Form with header -->
                        <div class="card wow fadeIn" data-wow-delay="0.3s">
                            <div class="card-body">

                                @RenderBody()
                            </div>
                        </div>
                        <!-- Form with header -->

                    </div>
                </div>
            </div>
        </div>
    </header>

    @Scripts.Render("~/bundles/mainScript")

    @Scripts.Render("~/bundles/datatableScript")


    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            @Html.Raw(TempData["msg"])
        })

    </script>


    <!-- Custom scripts -->
    <script>new WOW().init();</script>

</body>

</html>