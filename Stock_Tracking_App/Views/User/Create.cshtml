@model stockProject.Models.KULLANICI

@{
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
    ViewBag.SekmeAdi = "User Creation";
    ViewBag.SayfaAdi = "Create User";
    ViewBag.CardAdi = "Kullanıcı Ekleme";
}

<h2>@ViewBag.SayfaAdi</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card ">
        <h5 class="card-header h5 primary-color">@ViewBag.CardAdi</h5>
        <div class="card-body">
            <div class="form-horizontal">
                <div class="col-lg-6">

                    <div class="form-group">
                        <div class="md-form md-outline">
                            @Html.LabelFor(model => model.KUL_USERNAME, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.KUL_USERNAME, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KUL_USERNAME, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="md-form md-outline">
                            @Html.LabelFor(model => model.KUL_AD, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.KUL_AD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KUL_AD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="md-form md-outline">
                            @Html.LabelFor(model => model.KUL_SOYAD, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.KUL_SOYAD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KUL_SOYAD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.KUL_TIP, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("KUL_TIP", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.KUL_TIP, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="md-form md-outline">
                            @Html.LabelFor(model => model.KUL_SIFRE, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.KUL_SIFRE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KUL_SIFRE, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-info btn-rounded" })
                        <input type="submit" value="Kaydet" class="btn btn-success btn-rounded" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

