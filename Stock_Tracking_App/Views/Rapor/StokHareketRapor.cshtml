@model IEnumerable<stockProject.Models.STOK_HAREKET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@ViewBag.SayfaAdi</h3>
    </div>
</div>
<hr />


<div class="card ">
    <h5 class="card-header h5 primary-color">@ViewBag.CardAdi</h5>
    <div class="card-body">

        <table width="100%" class="table table-striped table-bordered table-hover" id="tbl_datatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.STOK.STOK_AD)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.DEPO_ESLESTIRME.DEPO.DEPO_ADI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DEPO_ESLESTIRME.ALT_DEPO.ALT_DEPO_ADI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SORUMLU.SORUMLU_ADI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HAREKET_TIP1.HAREKET_TIP_ADI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HAREKET_MIKTAR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HAREKET_TARIHI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ACIKLAMA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KULLANICI1.OLUSTURAN_KULLANICI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OLUSTURMA_TARIHI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KULLANICI1.GUNCELLEYEN_KULLANICI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GUNCELLEME_TARIHI)
                    </th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.STOK.STOK_AD)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DEPO_ESLESTIRME.DEPO.DEPO_ADI)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DEPO_ESLESTIRME.ALT_DEPO.ALT_DEPO_ADI)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.SORUMLU.SORUMLU_ADI)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.HAREKET_TIP1.HAREKET_TIP_ADI)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.HAREKET_MIKTAR)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.HAREKET_TARIHI)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ACIKLAMA)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.KULLANICI1.KUL_AD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OLUSTURMA_TARIHI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KULLANICI1.KUL_AD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GUNCELLEME_TARIHI)
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

