@model stockProject.Models.STOK_HAREKET

@{
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
    ViewBag.SekmeAdi = "Stok Hareket Yönetimi";
    ViewBag.SayfaAdi = "Stok HareketTanımlama";
    ViewBag.CardAdi = "Stok Hareket Bilgileri";
}

<h2>@ViewBag.SayfaAdi</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card ">
        <h5 class="card-header h5 primary-color">@ViewBag.CardAdi</h5>
        <div class="card-body">
            <div class="form-horizontal">
                <div class="col-lg-6">

                    <div class="form-group">
                        @Html.LabelFor(model => model.STOK_ID, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("STOK_ID", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.STOK_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HAREKET_TIP, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("HAREKET_TIP", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.HAREKET_TIP, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.DEPO_ESLESTIRME_ID, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("DEPO_ESLESTIRME_ID", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.DEPO_ESLESTIRME_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SORUMLU_ID, htmlAttributes: new { @class = "" })
                        @Html.DropDownList("SORUMLU_ID", null, "Seçiniz", htmlAttributes: new { @class = "mdb-select md-form", searchable = "Ara..." })
                        @Html.ValidationMessageFor(model => model.SORUMLU_ID, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <div class="md-form md-outline">
                            @Html.LabelFor(model => model.HAREKET_MIKTAR, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.HAREKET_MIKTAR, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HAREKET_MIKTAR, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="md-form md-outline">
                            @Html.LabelFor(model => model.ACIKLAMA, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.ACIKLAMA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ACIKLAMA, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-info btn-rounded" })
                        <input type="submit" value="Kaydet" class="btn btn-success btn-rounded" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

